// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "GeoIPS Dev Container",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		"dockerfile": "../Dockerfile",
		"target": "dev",
		"args": {
			"USER_ID": "${localEnv:UID:1000}",
			"GROUP_ID": "${localEnv:GID:1000}"
		},
		"options": [
			"--build-context",
			"testdata=${localEnv:GEOIPS_TESTDATA_DIR}"
		]
	},
	"mounts": [
		// Cartopy shapefiles
		"source=${localEnv:CARTOPY_SHAPEFILES}/shapefiles,target=/packages/shapefiles,type=bind",
		"source=${localEnv:CARTOPY_SHAPEFILES}/clone,target=/packages/shapefiles_clone,type=bind",

		// GeoIPS testdata
		"source=${localEnv:GEOIPS_TESTDATA_DIR},target=/geoips_testdata,type=bind",

		// Output directory
		"source=${localEnv:GEOIPS_OUTDIRS},target=/output,type=bind",

		// SSH keys and shell config for geoips_user
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh/,target=/home/geoips_user/.ssh,type=bind",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_vscode,target=/home/geoips_user/.bash_aliases,type=bind,readonly",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.pokemon_vscode,target=/home/geoips_user/.pokemon,type=bind,readonly",

		// SSH keys and shell config for root (for when sudo is needed)
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh/,target=/root/.ssh,type=bind",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_vscode,target=/root/.bash_aliases,type=bind,readonly",
		//"source=${localEnv:HOME}${localEnv:USERPROFILE}/.pokemon_vscode,target=/root/.pokemon,type=bind,readonly"
	],
	"workspaceMount": "source=${localWorkspaceFolder},target=/packages/geoips,type=bind",
	"workspaceFolder": "/packages/geoips",

	// Run as the geoips_user by default
	"remoteUser": "geoips_user",

	// Set environment variables
	"containerEnv": {
		"GEOIPS_TESTDATA_DIR": "/geoips_testdata",
		"GEOIPS_OUTDIRS": "/output",
		"GEOIPS_PACKAGES_DIR": "/packages",
		"CARTOPY_DATA_DIR": "/packages"
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"lextudio.restructuredtext",
				"ms-python.python",
				"ms-python.flake8",
				"tamasfe.even-better-toml",
				"streetsidesoftware.code-spell-checker",
				"ms-python.black-formatter",
				"ms-azuretools.vscode-docker",
				"ms-python.isort"
			],
			"settings": {
				"python.defaultInterpreterPath": "/home/geoips_user/.local/bin/python",
				"python.testing.pytestEnabled": true,
				"python.testing.unittestEnabled": false,
				"python.linting.enabled": true,
				"python.linting.flake8Enabled": true,
				"python.formatting.provider": "black"
			}
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Uncomment the next line to run commands after the container is created.
	// "postCreateCommand": "create_plugin_registries"

	// Configure tool-specific properties.
	// "customizations": {},
}
