<product_file>
<product method="rgb" name="Natural-Color">
    <rgb_args>
        <source name='seviri'>
            <var zenith='yes'>B03Ref</var>
            <var zenith='yes'>B02Ref</var>
            <var zenith='yes'>B01Ref</var>
        </source>
        <red>
            <equation>B03Ref</equation>
            <range>
                <min_value>0</min_value>
                <max_value>1.0</max_value>
                <units>albedo</units>
            </range>
        </red>
        <grn>
            <equation>B02Ref</equation>
            <range>
                <min_value>0</min_value>
                <max_value>1.0</max_value>
                <units>albedo</units>
            </range>
        </grn>
        <blu>
            <equation>B01Ref</equation>
            <range>
                <min_value>0</min_value>
                <max_value>1.0</max_value>
                <units>albedo</units>
            </range>
        </blu>
        <day_night>day</day_night>
    </rgb_args>
</product>
</product_file>
